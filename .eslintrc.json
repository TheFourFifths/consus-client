{
    "rules": {
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "no-console": [
            "error"
        ],
        "react/prop-types": "off",
        "semi": [
            "error",
            "always"
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ]
}
