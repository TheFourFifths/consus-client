.model-form

    padding-left: 1em
    font-family: sans-serif
    font-size: 15

    form
        backgound: #90CAF9
        display: inline-block
        padding:.5em 1.5em 1em 1em

    #thumbnail-preview
        max-width: 10em
        max-height: 10em
        margin-bottom: .75em

    .upload-select
        display: inline-block
        background-color: #1565C0
        color: white
        padding: 8 12
        font-weight: bold
        cursor: pointer
        margin: .5em 0
        box-shadow: 0 .1em .1em grey
        border-radius: 2px
        &:hover
            background: lighten(#1565C0, 10%)

    .radio-buttons
        margin-bottom: .75em

    input[type=file]
        display: none

    input[type=text]
        margin-bottom: .75em
        margin-top: .5em
        width: 30em

    input[type=number]
        margin-bottom: .75em
        margin-top: .5em
        width: 5em

    input[type=checkbox]
        margin-bottom: .75em

    textarea
        margin-bottom: .75em
        margin-top: .5em
        width: 30em
        font-family: inherit
