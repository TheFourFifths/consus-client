.student
    display: block
    height: auto
    padding: 5px
    margin: 4px
    border-radius: 6px
    background: #d6d6d6
    word-wrap: break-word

    .titleArea
        display: inline-block
        vertical-align: top
        width: 25%
        margin: 7px

        h2
            margin: 0

        .address
            display: block
    .infoArea
        display: inline-block
        vertical-align: top
        width: 65%

        .descriptionArea
            display: inline-block
            vertical-align: top
            padding: 10px

            h3
                margin: 0

            p
                margin: 0
                padding-top: 5px


    .actionArea
        display: inline-block
        vertical-align: top
        float: right
        padding-right: 10px

        img
            width: 24px
            display: block
            padding: 5px

            &:hover
                background: lighten(#d6d6d6, 50%)
