.modal
    font-family: sans-serif
    align-items: center
    background: rgba(0, 0, 0, 0.4)
    display: flex
    height: 100%
    justify-content: center
    left: 0
    position: fixed
    top: 0
    width: 100%

    .modal-content
        background: white
        border-radius: 5px

    .modal-heading
        text-align: center
        font-weight: bold
        font-size: 1.25em
        border-bottom: black solid thin
        padding: .5em 1em
        color: white
        border-top-left-radius: 5px
        border-top-right-radius: 5px

    .error-heading
        background: #EF5350

    .warning-heading
        background: #EF5350

    .debug-heading
        background: #2E7D32

    .info-heading
        background: #1565C0

    h4
        padding: 0 1em

    .modal-buttons
        text-align: center
        padding-bottom: .5em

    .debug
        background: lightgreen

    .info
        background: lightblue

    .warn
        background: lightyellow

    .error
        background: lightred

    .invalidText
        color:red
