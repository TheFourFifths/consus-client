@import 'colors.styl'

.modal
    font-family: sans-serif
    align-items: center
    background: rgba(0, 0, 0, 0.4)
    display: flex
    height: 100%
    justify-content: center
    left: 0
    position: fixed
    top: 0
    width: 100%

    .modal-content
        background: white
        border-radius: 5px

    .modal-heading
        text-align: center
        font-weight: bold
        font-size: 1.25em
        border-bottom: black solid thin
        padding: .5em 1em
        color: white
        border-top-left-radius: 5px
        border-top-right-radius: 5px

    .error-heading
        background: $error-modal-color

    .warning-heading
        background: $warn-modal-color

    .debug-heading
        background: $debug-modal-color

    .info-heading
        background: $info-modal-color

    button
        color: white
        padding: 8 12
        margin: .25em
        font-weight: bold
        cursor: pointer
        box-shadow: 0 .1em .1em grey
        border-style: none
        border-radius: 2px

    .default-btn
        background: $primary-btn-color
        &:hover
            background: lighten($primary-btn-color, 10%)
        &:focus
            outline: none
            background: lighten($primary-btn-color, 10%)

    .error-btn
        background: $error-modal-color
        &:hover
            background: lighten($error-modal-color, 10%)
        &:focus
            outline: none
            background: lighten($error-modal-color, 10%)

    .warning-btn
        background: $warn-modal-color
        &:hover
            background: lighten($warn-modal-color, 10%)
        &:focus
            outline: none
            background: lighten($warn-modal-color, 10%)

    .info-btn
        background: $info-modal-color
        &:hover
            background: lighten($info-modal-color, 10%)
        &:focus
            outline: none
            background: lighten($info-modal-color, 10%)

    .debug-btn
        background: $debug-modal-color
        &:hover
            background: lighten($debug-modal-color, 10%)
        &:focus
            outline: none
            background: lighten($debug-modal-color, 10%)

    h4
        padding: 0 1em
        text-align: center

    .modal-buttons
        text-align: center
        padding-bottom: .5em

    .debug
        background: lightgreen

    .info
        background: lightblue

    .warn
        background: lightyellow

    .error
        background: lightred

    .invalidText
        color:red
