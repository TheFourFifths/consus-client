.modal
    align-items: center
    background: rgba(0, 0, 0, 0.5)
    display: flex
    height: 100%
    justify-content: center
    left: 0
    position: fixed
    top: 0
    width: 100%

.modal-content
    background: white
    border-radius: 0.5em
    padding: 1em

.debug
    background: lightgreen
    color: darken(lightgreen, 50%)

.info
    background: lightblue
    color: darken(lightblue, 50%)

.warn
    background: lightyellow
    color: darken(lightyellow, 50%)

.error
    background: lightred
    color: darken(lightred, 50%)
