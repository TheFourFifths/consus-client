$font-family = 'Source Sans Pro', system-ui, sans-serif
$font-size = 1.0rem

html, body
    font: $font-size $font-family
    font-variant-ligatures: common-ligatures
    width: 100%
    margin: 0

#children
    background: #f3f3f3
    height: 100%
    & > *
        padding: 5px

.clear
    width: 0
    height: 0
    clear: both

textarea
    resize: none
    overflow: scroll

.center
    text-align: center

.link-nostyle
    color: inherit
    text-decoration: none

@media print
    .no-print
        display: none !important

